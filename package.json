{
  "name": "fastify-boot",
  "version": "1.0.1",
  "description": "Annotation framework and opinionated bootstrapper for Fastify.",
  "repository": "https://github.com/burketyler/fastify-boot",
  "author": "Tyler Burke",
  "main": "./.build/src/index.js",
  "types": "./.build/src/index.d.ts",
  "license": "MIT",
  "files": [
    ".build"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "fastify-boot": ".build/bin/cli.js"
  },
  "scripts": {
    "clean": "rm -rf .build",
    "build": "yarn clean && tsc && chmod +x .build/bin/cli.js",
    "prettier": "prettier --write \"**/*.ts\" --loglevel error",
    "tslint": "tslint -c ./tslint.json src/**/*.ts",
    "release": "yarn prettier && yarn tslint && yarn build",
    "test": "jest",
    "cm": "git-cz"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "ts-injection": "^1.0.3"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.2",
    "@types/node": "^14.14.35",
    "@types/webpack-env": "^1.16.0",
    "chalk": "^4.1.0",
    "commitizen": "^4.2.3",
    "commitlint": "^12.0.1",
    "cross-spawn": "^7.0.3",
    "cz-customizable": "^6.3.0",
    "fastify": "^3.14.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.3",
    "ts-loader": "^8.0.18",
    "tslint": "^6.1.3",
    "typescript": "^4.2.3",
    "webpack": "^5.26.0",
    "webpack-node-externals": "^2.5.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "commitizen.config.js"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
